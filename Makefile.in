######## DEFINITIONS ########

# Make things

SHELL=/bin/sh

@SET_MAKE@

# Sub directories.

SUBDIRS=doc cache conf src

######## COMPILATION ########

all : compile

compile :
	@for dir in $(SUBDIRS); do \
	  ( cd $$dir && $(MAKE) compile ) \
	done

######## INSTALLATION ########

install : compile
	@for dir in $(SUBDIRS); do \
	  ( cd $$dir && $(MAKE) install ) \
	done

######## CLEAN UP ########

clean ::
	-rm -f core *~

clean ::
	@for dir in $(SUBDIRS); do \
	  ( cd $$dir && $(MAKE) clean ) \
	done

########

distclean :: clean
	-rm -f Makefile src/autoconf.h
	-rm -f config.log config.status config.cache

distclean :: clean
	@for dir in $(SUBDIRS); do \
	  ( cd $$dir && $(MAKE) distclean ) \
	done

########
